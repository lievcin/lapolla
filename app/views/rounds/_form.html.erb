<%= simple_form_for [@cup, @round] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :leg %>
    <%= f.input :name %>
    <%= f.input :cup_id, :as => :hidden, :input_html => { :value => @cup.id }%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
