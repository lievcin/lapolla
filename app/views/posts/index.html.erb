<h1>Listing posts</h1>

<table>
  <tr>
    <th>Headline</th>
    <th>Category</th>
    <th>Created</th>
    <th>Last updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.headline %></td>
    <td><%= post.category %></td>
    <td><%= post.created_at.strftime("%d.%m.%y %H:%M") %></td>
    <td><%= post.updated_at.strftime("%d.%m.%y %H:%M") %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
